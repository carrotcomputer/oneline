<div class="conversation-container fluid-container full-height">
  <div class="row full-height">
    <div class="col-xs-4 col-xs-offset-4">
      {{#link-to "conversations"}}<button class="btn btn-default">Back</button>{{/link-to}}
    </div>
    <div class="message col-xs-12">
      <h1>Hello! I'm sending you a one line message. How are you?</h1>
    </div><!--.message-->
    {{#if reply}}
    <div class="reply col-xs-12">
      {{textarea}}
      <button {{action "cancelReply"}} class="btn btn-default">Cancel</button>
    </div>
    {{/if}}
    <div class="col-xs-12">
      <button {{action "startReply"}} class="btn btn-default">Reply</button>
    </div>
  </div><!--.row-->
</div><!--.conversation-container-->