<div class="conversations-container fluid-container">
  <div class="row">
    <nav class="col-xs-12">
      <div class="row">
        <div class="title col-xs-3">
          <h3>Oneline</h3>
        </div><!--.col-xs-3-->
        <div class="settings-button col-xs-2 col-xs-offset-6">
          <h3>{{fa-icon "cog"}}</h3>
        </div>
      </div><!--.row-->
    </nav><!--.col-xs-12-->
  </div><!--.row-->
  <div class="conversations-list col-xs-12">
    <ul>
      {{#each conversation in model}}
      <li {{action "goToConversation"}} {{bind-attr class="backgroundColour"}}>
          <div class="user-icon"></div><!--.user-icon-->
          <div class="noti">
            {{fa-icon "circle"}}
          </div><!--.noti-->
        <div class="user-name">
          <h2>{{conversation.full_name}}</h2>
        </div><!--.user-name-->
      </li>
      {{/each}}
      <li {{action "goToConversation"}} class="emerald-green-background">
        <div class="new-icon">
          <p>+</p>
        </div><!--.new-icon-->
        <div class="user-name">
          <h2>New Oneline</h2>
        </div><!--.user-name-->
      </li>
    </ul>
  </div>
</div><!--.conversations-container-->